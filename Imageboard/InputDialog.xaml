<Window x:Class="Imageboard.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="#15202b">
    <Grid>
        <TextBlock Text="Enter your ip:" Margin="10,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#6995c5"/>
        <TextBox x:Name="InputField" Margin="10,40,10,40" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#223345" Foreground="Wheat"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button Content="OK" Width="75" Margin="5,0" Click="OkButton_Click" Background="Wheat"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click" Background="Wheat"/>
        </StackPanel>
    </Grid>
</Window>
